@model MoneySkillTreeHW.Models.ViewModels.MoneyViewModel

@{
    ViewBag.Title = "MyAccount";
}

<div class="well" style="margin-top:50px;">
    @using (Html.BeginForm("MyAccount", "Money",
                FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            @Html.LabelFor(x => x.Category, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.DropDownList("category", (IEnumerable<SelectListItem>)ViewData["CateList"], new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Category, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Amt, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.EditorFor(x => x.Amt, new { htmlAttributes = new { @class = "form-control", placeholder = "金額" } })
                @Html.ValidationMessageFor(x => x.Amt, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.MoneyDate, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.EditorFor(x => x.MoneyDate, new { htmlAttributes = new { @class = "form-control", placeholder = "日期" } })
                @Html.ValidationMessageFor(x => x.MoneyDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Remark, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.Remark, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Remark, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-8 col-sm-4">
                <button type="submit" class="btn btn-default">送出</button>
            </div>
        </div>
    }
</div>

@Html.Action("MyAccountDetail")
